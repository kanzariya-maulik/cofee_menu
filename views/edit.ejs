<%- include("header.ejs") %>
<style>
    .off{
        display: none;
    }
    *{
      animation: none;
    }
</style>
<h1 class="align-items-center">Edit Coffe id : <%= obj[0].id %></h1>
<div class="d-flex justify-content-center align-items-center">
    
    <form class="w-25" method="post" action="/admin/coffe/<%= obj[0].id %>?_method=PATCH">
        <div class="form-group">
            <img src="<%= obj[0].imgName %>" class="img h-50 w-50">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">New URL of image</label>
            <input type="text" name="imgName" class="form-control" value="<%= obj[0].imgName %>">
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">New Name</label>
            <input type="text" name="title" class="form-control" value="<%= obj[0].title %>">
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">New description</label>
            <textarea type="text" name="text" class="form-control" placeholder="about coffe"><%= obj[0].text %></textarea>
          </div>
          <div class="form-group m-3">
            <button class="btn btn-primary">Edit</button>
          </div>
      </form>
    </div>
</body>
</html>